@model PagedList.IPagedList<QLSach.Models.TaiKhoan>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div><a href="/Admin/TaiKhoan/Create"><p align="center" style="font-size:23px; margin-top:6px; border:solid 1px black">Thêm</p></a></div>
            <div class="panel-heading">
                <h3>Danh sách tài khoản</h3>
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-donHangNCC">
                        <thead>
                            <tr>
                                <th>Mã TK</th>
                                <th>Tên đăngnhập</th>
                                <th>Trạng thái</th>
                                <th>Quyền</th>
                                <th></th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaTK</td>
                                    <td>@item.TenDangNhap</td>
                                    <td>@item.TrangThai</td>
                                    <td>@item.Quyen</td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaTK }) |
                                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTK }) |
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaTK })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="panel-body">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
