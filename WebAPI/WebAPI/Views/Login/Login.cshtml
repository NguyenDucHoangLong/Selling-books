
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div> 
        <h1>Login</h1>
        <form action="checklogin" method="post">
            <table>
                <tr>
                    <td>Username:</td>
                    <td>@Html.TextBox("name")</td>
                </tr>
                <tr>
                    <td>Password:</td>
                    <td>@Html.Password("pass")</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Login" /></td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
