@model QLSach.Models.DonHang_NCC

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chỉnh sửa thông tin đơn hàng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-10">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.MaDonHang)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaSach, "Mã sách", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.DropDownList("MaSach", null, String.Empty)
                                        @Html.ValidationMessageFor(model => model.MaSach)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.NgayGiao, "Ngày giao", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.NgayGiao)
                                        @Html.ValidationMessageFor(model => model.NgayGiao)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.SoLuong, "Số lượng", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.SoLuong)
                                        @Html.ValidationMessageFor(model => model.SoLuong)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TinhTrang, "Tình trạng", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.TinhTrang)
                                        @Html.ValidationMessageFor(model => model.TinhTrang)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TongTien, "Tồng tiền", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.TongTien)
                                        @Html.ValidationMessageFor(model => model.TongTien)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.MaHopDong, "Mã hợp đồng", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.MaHopDong)
                                        @Html.ValidationMessageFor(model => model.MaHopDong)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Lưu" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
