@model PagedList.IPagedList<QLSach.Models.Sach>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Danh sách sách cần mua</h3>
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-donHangNCC">
                        <thead>
                            <tr>
                                <th>Mã sách</th>
                                <th>Tên sách</th>
                                <th>Tồn tối thiểu</th>
                                <th>Thời gian kí kết</th>
                                <th>Công cụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaSach</td>
                                    <td>@item.TenSach</td>
                                    <td>@item.SoLuongTonToiThieu</td>
                                    <td>@item.ThoiHan</td>
                                    <td>
                                        @Html.ActionLink("Sửa", "Edit1", new { id = item.MaSach }) |
                                        <a href="/Admin/KhaNangCungCap/Index/?masach=@item.MaSach" >Danh sánh đăng kí</a>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="panel-body">
                                @Html.PagedListPager(Model, page => Url.Action("Index1", new { page }))
                            </div>
                        </div>
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
