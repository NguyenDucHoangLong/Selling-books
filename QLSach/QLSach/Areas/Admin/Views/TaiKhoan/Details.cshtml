@model QLSach.Models.TaiKhoan

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Chi tiết tài khoản</h3>
            </div>
            <dl class="dl-horizontal">
                <dt>
                    Tên đăng nhập
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenDangNhap)
                </dd>

                <dt>
                    Mật khẩu
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MatKhau)
                </dd>

                <dt>
                    Trạng thái
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TrangThai)
                </dd>

                <dt>
                    Quyền
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Quyen)
                </dd>

                <dt>
                    Người dùng
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MaNguoiDung)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Sửa", "Edit", new { id = Model.MaTK })
        </p>
    </div>
</div>
