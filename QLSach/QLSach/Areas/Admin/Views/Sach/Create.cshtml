                                        @Html.EditorFor(model => model.SoLuongCan)
                                        @Html.ValidationMessageFor(model => model.SoLuongCan)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TinhTrang,"Tình trạng", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TinhTrang)
                                        @Html.ValidationMessageFor(model => model.TinhTrang)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.SoLuongTonToiThieu, "Só lượng tồn tối thiểu", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SoLuongTonToiThieu)
                                        @Html.ValidationMessageFor(model => model.SoLuongTonToiThieu)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ThoiHan, "Thời hạn hợp đồng", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ThoiHan)
