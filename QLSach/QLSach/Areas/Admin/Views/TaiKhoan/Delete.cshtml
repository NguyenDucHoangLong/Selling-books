@model QLSach.Models.TaiKhoan

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Bạn có thật sự muốn xóa tài khoản này không?</h3>
            </div>
            <dl class="dl-horizontal">
                <dt>
                    Tên đăng nhập
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TenDangNhap)
                </dd>

                <dt>
                    Mật khẩu
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MatKhau)
                </dd>

                <dt>
                    Trạng thái
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TrangThai)
                </dd>

                <dt>
                    Quyền
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Quyen)
                </dd>

                <dt>
                    Người dùng
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.MaNguoiDung)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-default" />
                </div>
            }
        </div>
    </div>
</div>
