@model QLSach.Models.Sach

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chỉnh sửa thông tin sách
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-10">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.MaSach)
                                @Html.HiddenFor(model => model.TenSach)
                                @Html.HiddenFor(model => model.MoTa)
                                @Html.HiddenFor(model => model.DanhMuc)
                                @Html.HiddenFor(model => model.Gia)
                                @Html.HiddenFor(model => model.NamSanXuat)
                                @Html.HiddenFor(model => model.NhaXuatBan)
                                @Html.HiddenFor(model => model.TacGia)
                                @Html.HiddenFor(model => model.AnhBia)
                                @Html.HiddenFor(model => model.SoLuongTon)
                                <div class="form-group">
                                    @Html.LabelFor(model => model.SoLuongCan, "Số lượng cần", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SoLuongCan)
                                        @Html.ValidationMessageFor(model => model.SoLuongCan)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.SoLuongTonToiThieu, "Số lượng tồn tối thiểu", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SoLuongTonToiThieu)
                                        @Html.ValidationMessageFor(model => model.SoLuongTonToiThieu)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.ThoiHan, "Thời hạn hợp đồng", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ThoiHan)
                                        @Html.ValidationMessageFor(model => model.ThoiHan)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.TinhTrang, "Tình trạng", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TinhTrang)
                                        @Html.ValidationMessageFor(model => model.TinhTrang)
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Lưu" class="btn btn-default" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
