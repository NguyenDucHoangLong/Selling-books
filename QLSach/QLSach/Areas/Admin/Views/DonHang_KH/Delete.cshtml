@model QLSach.Models.DonHang_KH

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminDefault.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Xóa hợp đồng</h2>
                <h3>Bạn có thật sự muốn xóa không?</h3>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-donHangNCC">
                        <thead>
                            <tr>
                                <th>Ngày giao</th>
                                <th>Địa chỉ giao</th>
                                <th>Tình trạng</th>
                                <th>Đã thanh toán</th>
                                <th>Ngày lập</th>
                                <th>Tổng tiền</th>
                                <th>Họ tên</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Html.DisplayFor(model => model.NgayGiao)</td>
                                <td>@Html.DisplayFor(model => model.DiaChiGiao)</td>
                                <td>@Html.DisplayFor(model => model.TinhTrang)</td>
                                <td>@Html.DisplayFor(model => model.DaThanhToan)</td>
                                <td>@Html.DisplayFor(model => model.NgayLap)</td>
                                <td>@Html.DisplayFor(model => model.TongTien)</td>
                                <td>@Html.DisplayFor(model => model.KhachHang.HoTen)</td>
                            </tr>
                            <tr>
                                <td colspan="7">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            <input type="submit" value="Xóa" class="btn btn-default" />
                                        </div>
                                    }
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>